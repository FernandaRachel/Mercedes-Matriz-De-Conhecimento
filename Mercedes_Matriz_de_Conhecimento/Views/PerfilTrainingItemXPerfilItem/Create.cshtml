@model Mercedes_Matriz_de_Conhecimento.tblPerfis

@using System.Collections;

@{
    ViewBag.Title = "PERFIL TREINAMENTO X PERFIL TREINAMENTO ITEM";
}

@section scripts{
    <script>
        function selected() {
            var idPerfis = document.getElementById("idPerfis");
            location.href = '@Url.Action("Details", "PerfilTrainingItemXPerfilItem")?idProfile=' + idPerfis.value;
        }
    </script>
}

<h4 class="">Associar Perfil Treinamento X Perfil Treinamento Item</h4>

<div class="row">

    @using (Html.BeginForm("Create", "PerfilTrainingItemXPerfilItem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

        <div class="col-md-5">

            @Html.ValidationSummary("", new { @class = "text-danger" })
            @*<div class="form-group">
                    @Html.LabelFor(m => m.Ordem, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Ordem, new { @class = "form-control" })
                    </div>
                </div>*@
            <div class="form-group">
                @Html.Label("Perfis", new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.IdPerfis, new SelectList((IEnumerable)ViewData["PerfilTreinamentos"], "idPerfis", "nome"), "Escolha um Treinamento",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true",
                            id = "idPerfis"
                        })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11">
                    <button type="button" id="selecionado" onclick="selected()" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Selecionar Atividade</button>
                </div>
            </div>
        </div>

    }

</div>
<div class="row">
    <a type="button" class="btn btn-default" href="@Url.Action("Index", "PerfilTrainingItemXPerfilItem")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
</div>
