@using PagedList.Mvc;
@model PagedList.IPagedList<Mercedes_Matriz_de_Conhecimento.tblPerfilAtivItem>

@{
    ViewBag.Title = "ITEM PERFIL DE ATIVIDADE";
}



<div class="container button-place">
    <a type="button" class="btn btn-modified-create btn-group-sm pull-left" href="@Url.Action("Create", "ActivityProfileItem")">
        <i class="fas fa-plus"></i> Cadastrar Item de Perfil de Atividade
    </a>
</div>
<div class="container table-place">
    <div class="panel panel-primary">
        <div class="panel-heading">Quantidade: @Model.TotalItemCount </div>
        <div class="panel-body table-responsive">
            <table class="table table-striped table-hover table-condensed table-bordered text-center">
                <thead class="text-center">
                    <tr>
                        <th class="text-center">Sigla</th>
                        <th class="text-center">Descrição</th>
                        <th class="text-center">Transição</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var activityProfileItem in Model)
                    {
                        <tr class="text-center">
                            <td>@activityProfileItem.Sigla</td>
                            <td>@activityProfileItem.Descricao</td>
                            @if (@activityProfileItem.LogarTransicao)
                            {
                                <td>Logar</td>
                            }
                            else
                            {
                                <td>Não Logar</td>
                            }
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn" onclick="location.href='@Url.Action("Details","ActivityProfileItem",new { id = @activityProfileItem.idPerfilAtivItem })'"><i class="glyphicon glyphicon-pencil  icon-edit-modified"></i></button>
                                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete","ActivityProfileItem",  new { id = @activityProfileItem.idPerfilAtivItem})'"><i class="glyphicon glyphicon-trash icon-delete-modified"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="page-pagination">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            </div>
        </div>
    </div>
</div>
