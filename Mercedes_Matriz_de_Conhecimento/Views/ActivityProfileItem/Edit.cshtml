@model Mercedes_Matriz_de_Conhecimento.tblPerfilAtivItem

@using System.Collections;

<script type="text/javascript">


</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>

    @*<h3 class=""></h3>*@
    <h4> Item de Perfil Atividade</h4>

    <div class="row">

        @using (Html.BeginForm("Edit", "ActivityProfileItem", new { id = Model.idPerfilAtivItem }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="col-md-5">

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Sigla, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Sigla, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Descricao, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LogarTransicao, new { @class = "col-md-3 control-label" })
                    <div class="col-md-2">
                        @Html.CheckBoxFor(m => m.LogarTransicao, new { @class = "" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-11">
                        <button type="submit" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Salvar</button>
                    </div>
                </div>

            </div>

        }
    </div>


    <div class="row">
        <a type="button" class="btn btn-default" href="@Url.Action("Index", "ActivityProfileItem")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
    </div>
</body>

</html>