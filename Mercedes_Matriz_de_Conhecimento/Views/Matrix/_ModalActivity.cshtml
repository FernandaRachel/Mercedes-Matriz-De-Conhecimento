@model  Mercedes_Matriz_de_Conhecimento.tblMatrizFuncXAtividades

<div class="modal" tabindex="-1" role="dialog" id="atividade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center">AVALIAÇÃO ATIVIDADE</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-8" id="dropdown-training">
                    @Html.DropDownListFor(m => m.idItemPerfil, new SelectList((IEnumerable<tblPerfilItens>)ViewBag.PerfilITem, "idPerfilItem", "Descricao"), "Escolha uma avaliação",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true",
                            id = "itemAtivID"
                        })

                </div>
            </div>
            <br />
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveMatrizActivity(@Model.idFuncionario,@Model.idAtividade)">Salvar Avaliação</button>
                <button type="button" class="btn btn-danger" onclick="DeleteMatrizActivity(@Model.idFuncionario,@Model.idAtividade)">Deletar Avaliação</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
