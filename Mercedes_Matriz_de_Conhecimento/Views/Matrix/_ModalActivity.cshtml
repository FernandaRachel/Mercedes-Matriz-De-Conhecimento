@model  Mercedes_Matriz_de_Conhecimento.tblMatrizFuncXAtividadesTemp

<div class="modal" tabindex="-1" role="dialog" id="atividade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center">AVALIAÇÃO ATIVIDADE</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cancelar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8" id="dropdown-training">
                        @Html.DropDownListFor(m => m.idItemPerfil, new SelectList((IEnumerable<tblPerfilItens>)ViewBag.PerfilITem, "idPerfilItem", "Descricao"), "Escolha uma avaliação",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true",
                            id = "itemAtivID"
                        })

                    </div>
                </div>
                <div id="alocacao" style="display:none">
                    <div class="row">
                        <div class="form-group">
                            @Html.TextAreaFor(m => m.alocacaoForcada, new { @class = "form-control", id = "alocacaoForcada", placeholder = "Justifique a alocação forçada" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="SaveMatrizActivity(@Model.idFuncionario,@Model.idAtividade, @Model.alocacaoForcada)">Salvar Avaliação</button>
                <button type="button" class="btn btn-default" onclick="DeleteMatrizActivity(@Model.idFuncionario,@Model.idAtividade)">Deletar Avaliação</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
