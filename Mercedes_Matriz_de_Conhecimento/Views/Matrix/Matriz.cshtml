                <tr>
                    @if (w2.alocacaoForcada != null)
                    {
                        <td class="text-center">@w.Usuario</td>
                        <td class="text-center">@w2.alocacaoForcada</td>
                        <td class="text-center">@w2.tblFuncionarios.Nome</td>
                        <td class="text-center">@w2.tblAtividades.Nome</td>
                    }
                </tr>
            }
        }
    </tbody>
</table>