@model Mercedes_Matriz_de_Conhecimento.tblAvaliacaoFuncXworkzoneXatividade

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@* FIRST PART OF MATRIX *@
<div class="row">
    <div class="col-md-2">Trabalha com autonomia</div>
    <div class="col-md-1">3</div>
    <div class="col-md-1">
        <div class="row">
            <div class="col-md-6">Necess.</div>
        </div>
        <div class="row">
            <div class="col-md-6">Dispon.</div>
        </div>
        <div class="row">
            <div class="col-md-6">♠.</div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-3">
            @foreach (var teste in @ViewBag.numbers)
            {
                <div class="col-md-1">
                    @Html.TextBoxFor(m => m.idFuncionario, new { @class = "form-control" })

                    @*@teste*@
                </div>
            }
        </div>
        <div class="col-md-3">
            @foreach (var teste2 in @ViewBag.numbers2)
            {
                <div class="col-md-1 colored-tiles">@teste2</div>
            }
        </div>
        <div class="col-md-3">
            @foreach (var teste in @ViewBag.numbers2)
            {
                <div class="col-md-1 colored-tiles">@teste</div>
            }
        </div>
    </div>
</div>

@* SECOND PART OF MATRIX *@
<div class="row">
    <div class="col-md-2">Apto a treinar</div>
    <div class="col-md-1">3</div>
    <div class="col-md-1">
        <div class="row">
            <div class="col-md-6">Necess.</div>
        </div>
        <div class="row">
            <div class="col-md-6">Dispon.</div>
        </div>
        <div class="row">
            <div class="col-md-6">♠.</div>
        </div>
    </div>
    <div class="row">
        <div class="scrollable">
            <div class="col-md-3">
                @foreach (var teste in @ViewBag.numbers)
            {
                    <div class="col-md-1 colored-tiles">@teste</div>
                }
            </div>
            <div class="col-md-3">
                @foreach (var teste2 in @ViewBag.numbers2)
            {
                    <div class="col-md-1 colored-tiles">@teste2</div>
                }
            </div>
            <div class="col-md-3">
                @foreach (var teste2 in @ViewBag.numbers2)
            {
                    <div class="col-md-1 colored-tiles">@teste2</div>
                }
            </div>
        </div>
    </div>
</div>

<table>
    <thead>
        <tr>
            <th rowspan="3">Trabalha com Autonomia</th>
        </tr>
    </thead>
</table>