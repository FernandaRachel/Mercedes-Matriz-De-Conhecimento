@model Mercedes_Matriz_de_Conhecimento.tblWorkzone

@{
    ViewBag.Title = "Index";
    ViewBag.Cols = 0;
}

<script>
    function openModalTrain(idTrain, idFuncionario) {
        $('#treinamento').modal('show');
    }

    function openModalActiv(idActivity, idFuncionario) {
        $('#atividade').modal('show');
    }
</script>


<p>TT: @ViewBag.ttListCount</p>
<p>T: @ViewBag.tListCount</p>
<p>ATV: @ViewBag.activiesCount</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2"></th>
            <th colspan="@ViewBag.tListCount">Perfil</th>
            <th colspan="@ViewBag.activiesCount">Tarefas</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th></th>
            <th></th>
            @foreach (var tt in (IEnumerable<tblTipoTreinamento>)ViewBag.ttList)
            {
                <th colspan="@tt.tblTreinamento.Count" class="text-style">@tt.Nome</th>
            }

            @foreach (var a in (IEnumerable<tblAtividades>)ViewBag.activiesList)
            {
                <th class="text-style">@a.Sigla</th>
            }


        </tr>
        <tr>
            <th>Registro</th>
            <th>Nome</th>
            @foreach (var t in (IEnumerable<tblTreinamento>)ViewBag.trainingList)
            {
                <th class="rotate">
                    <div>
                        <div class="rotation-wrapper-outer">
                            <div class="rotation-wrapper-inner">
                                <span>@t.Nome</span>
                            </div>
                        </div>
                    </div>
                </th>
            }

            @foreach (var a in (IEnumerable<tblAtividades>)ViewBag.activiesList)
            {
                <th class="rotate">
                    <div>
                        <div class="rotation-wrapper-outer">
                            <div class="rotation-wrapper-inner">
                                <span>@a.Nome</span>
                            </div>
                        </div>
                    </div>
                </th>
            }
        </tr>
        @foreach (var t in Model.tblWorkzoneXFuncionario)
            {
            <tr>
                <td class="text-style">@t.tblFuncionarios.RE</td>
                <td class="text-style">@t.tblFuncionarios.Nome</td>
                @foreach (var trein in (IEnumerable<tblTreinamento>)ViewBag.trainingList)
                {
                    <td onclick="openModalTrain(@trein.IdTreinamento,@t.idFuncionario)"></td>
                }
                @foreach (var a in (IEnumerable<tblAtividades>)ViewBag.activiesList)
                {
                    <td onclick="openModalActiv(@a.idAtividade,@t.idFuncionario)"></td>
                }
            </tr>
        }
    </tbody>
</table>

<div id="listTraining">
    @{Html.RenderAction("BuscarITem", "Matrix", new { idTrain = 0, idFuncionario = 0 });}
</div>


