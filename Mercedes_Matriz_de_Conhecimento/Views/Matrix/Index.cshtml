@model Mercedes_Matriz_de_Conhecimento.tblMatrizWorkzone
@using System.Collections;

@{
    ViewBag.Title = "SELEÇÃO MATRIZ";
}

@section Scripts{

    <script>
        function redirectToMatriz() {
            var WorkzoneID  = document.getElementById("workzone");

            if (WorkzoneID.value.length > 0) {
                location.href = '@Url.Action("Matriz", "Matrix")?WorkzoneID=' + WorkzoneID.value;
            } else {
                alert("Selecione um Posto de Treinamento")
            }
        }
    </script>
}


<h3>Selecione sua Workzone</h3>

<br />
@Html.ValidationSummary("", new { @class = "text-danger" })

<div class="row">
    <div class="col-md-5">

        <div class="form-group">
            @Html.Label("Workzone", new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.idWorkzone, new SelectList((IEnumerable)ViewData["Workzones"], "idWorkzone", "Nome"), "Escolha uma Workzone",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true",
                            id = "workzone"
                        })
            </div>
        </div>
    </div>
    <div class="col-md-1" style="margin-top: 1%">
        <button class="btn btn-modified-save pull-right" onclick="redirectToMatriz()">Selecionar</button>
    </div>
</div>


