@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblTipoTreinamento>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Tipo de Treinamento</h2>
    <div class="container table-place">

        <table class="table table-bordered">
            <thead class="text-center">
                <tr>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Sigla</th>
                    <th class="text-center">Descrição</th>
                    <th class="text-center">Perfil de Treinamento</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var trainingType in Model)
                {
                    <tr class="text-center">
                        <td>@trainingType.Nome</td>
                        <td>@trainingType.Sigla</td>
                        <td>@trainingType.Descricao</td>
                        <td>@trainingType.tblPerfilTreinamento.Nome</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button><a href="@Url.Action("Details","TrainingType",new { id = @trainingType.IdTipoTreinamento })"><i class="fas fa-pencil-alt icon-edit-modified"></i></a></button>
                                <button><a href="@Url.Action("Delete","TrainingType",  new { id = @trainingType.IdTipoTreinamento})"><i class="fas fa-trash icon-delete-modified"></i></a></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-modified-create btn-group-sm pull-right" href="@Url.Action("Create", "TrainingType")">
            <i class="fas fa-plus"></i> Cadastrar Tipo de Treinamento
        </a>
    </div>

</body>
</html>
