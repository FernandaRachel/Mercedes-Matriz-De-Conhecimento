@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblTipoTreinamento>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Tipo de Treinamento</h2>
    <div class="container table-place">

        <table class="table table-striped">
            <thead class="text-center">
                <tr class="table-dark">
                    <th class="text-center">Nome</th>
                    <th class="text-center">Sigla</th>
                    <th class="text-center">Descrição</th>
                    <th class="text-center">Perfil de Treinamento</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var training in Model)
                {
                    <tr class="text-center">
                        <td>@training.Nome</td>
                        <td>@training.Sigla</td>
                        <td>@training.Descricao</td>
                        <td>@training.tblPerfilTreinamento.Nome</td> 
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-group-sm" href="@Url.Action("Details","TrainingType",new { id = @training.IdTipoTreinamento })">Editar</a>
                                <a class="btn btn-default btn-group-sm" href="@Url.Action("Delete","TrainingType",  new { id = @training.IdTipoTreinamento})">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-primary btn-group-sm pull-right" href="@Url.Action("Create", "TrainingType")">
            Cadastrar Tipo de Treinamento
        </a>
    </div>

</body>
</html>
