@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblPerfilAtividade>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Perfil de Atividades</h2>
    <div class="container table-place">

        <table class="table table-bordered">
            <thead class="text-center">
                <tr >
                    <th class="text-center">Nome</th>
                    <th class="text-center">Usuário de Criação</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var activityProfile in Model)
                {
                    <tr class="text-center">
                        <td>@activityProfile.nome</td>
                        <td>@activityProfile.UsuarioCriacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button onclick="location.href='@Url.Action("Details","ActivityProfile",new { id = @activityProfile.idPerfilAtividade })"><i class="fas fa-pencil-alt icon-edit-modified"></i></button>
                                <button onclick="location.href='@Url.Action("Delete","ActivityProfile",  new { id = @activityProfile.idPerfilAtividade})"><i class="fas fa-trash icon-delete-modified"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-modified-create btn-group-sm pull-right" href="@Url.Action("Create", "ActivityProfile")">
            <i class="fas fa-plus"></i> Cadastrar Perfil de Atividade
        </a>
    </div>

</body>
</html>
