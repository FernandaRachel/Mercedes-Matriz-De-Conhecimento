@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblPerfilAtividade>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Atividades</h2>
    <div class="container table-place">

        <table class="table table-striped">
            <thead class="text-center">
                <tr class="table-dark">
                    <th class="text-center">Nome</th>
                    <th class="text-center">Usuário de Criação</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var activityProfile in Model)
                {
                    <tr class="text-center">
                        <td>@activityProfile.nome</td>
                        <td>@activityProfile.UsuarioCriacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-group-sm" href="@Url.Action("Details","ActivityProfile",new { id = @activityProfile.idPerfilAtividade })">Editar</a>
                                <a class="btn btn-default btn-group-sm" href="@Url.Action("Delete","ActivityProfile",  new { id = @activityProfile.idPerfilAtividade})">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-primary btn-group-sm pull-right" href="@Url.Action("Create", "ActivityProfile")">
            Cadastrar Perfil de Atividade
        </a>
    </div>

</body>
</html>
