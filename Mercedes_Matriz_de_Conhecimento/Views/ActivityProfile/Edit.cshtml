@model Mercedes_Matriz_de_Conhecimento.tblPerfilAtividade

@using System.Collections;

@{
    ViewBag.Title = "PERFIL DE ATIVIDADES";
}


    @*<h3 class=""></h3>*@
    <h4><i class="glyphicon glyphicon-pencil  icon-edit-modified"></i> Perfil Atividade</h4>

    <div class="row">

        @using (Html.BeginForm("Edit", "ActivityProfile", new { id = Model.idPerfilAtividade }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="col-md-5">

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.nome, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.nome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-11">
                        <button type="submit" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Salvar</button>
                    </div>
                </div>

            </div>

        }
    </div>

    <div class="row">
        <a type="button" class="btn btn-default" href="@Url.Action("Index", "ActivityProfile")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
    </div>