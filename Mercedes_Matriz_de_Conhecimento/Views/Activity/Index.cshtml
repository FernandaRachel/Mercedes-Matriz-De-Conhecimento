@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblAtividades>


@{
    ViewBag.Title = "ATIVIDADES";
}


<div class="container button-place">
    <a type="button" class="btn btn-modified-create btn-group-sm pull-left" href="@Url.Action("Create", "Activity")">
        <i class="fas fa-plus"></i> Cadastrar Atividade
    </a>
</div>
<div class="container table-place">
    <div class="panel panel-primary">
        <div class="panel-heading">Quantidade: </div>
        <div class="panel-body table-responsive">
            <table class="table table-striped table-hover table-condensed table-bordered text-center">
                <thead class="text-center">
                    <tr>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Sigla</th>
                        <th class="text-center">Descrição</th>
                        <th class="text-center">Tipo Equipamento GSA</th>
                        <th class="text-center">Perfil Atividade</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var activity in Model)
                    {
                        <tr class="text-center">
                            <td>@activity.Nome</td>
                            <td>@activity.Sigla</td>
                            <td>@activity.Descricao</td>
                            <td>@activity.idTipoEquipamentoGSA</td>
                            <td>@activity.tblPerfilAtividade.nome</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button onclick="location.href='@Url.Action("Details", "Activity", new { id = @activity.idAtividade })'"><i class="glyphicon glyphicon-pencil  icon-edit-modified"></i></button>
                                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete","Activity",  new { id = @activity.idAtividade})'"><i class="glyphicon glyphicon-trash icon-delete-modified"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
