@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblAtividades>


<!DOCTYPE html>

<script type="text/javascript">
</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Atividades</h2>
    <div class="container table-place">

        <table class="table table-bordered">
            <thead class="text-center">
                <tr >
                    <th class="text-center">Nome</th>
                    <th class="text-center">Sigla</th>
                    <th class="text-center">Descrição</th>
                    <th class="text-center">Tipo Equipamento GSA</th>
                    <th class="text-center">Perfil Atividade</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var activity in Model)
                {
                    <tr class="text-center">
                        <td>@activity.Nome</td>
                        <td>@activity.Sigla</td>
                        <td>@activity.Descricao</td>
                        <td>@activity.idTipoEquipamentoGSA</td>
                        <td>@activity.tblPerfilAtividade.nome</td> 
                        <td>
                            <div class="btn-group" role="group">
                                <button onclick="location.href='@Url.Action("Details", "Activity", new { id = @activity.idAtividade })'"><i class="fas fa-pencil-alt icon-edit-modified"></i></button>
                                <button onclick="location.href='@Url.Action("Delete","Activity",  new { id = @activity.idAtividade})'"><i class="fas fa-trash icon-delete-modified"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-modified-create btn-group-sm pull-right" href="@Url.Action("Create", "Activity")">
            <i class="fas fa-plus"></i> Cadastrar Atividade
        </a>
    </div>

</body>
</html>
