@model Mercedes_Matriz_de_Conhecimento.tblPerfilAtividadeXPerfilAtItem

@using System.Collections;

@{
    ViewBag.Title = "PERFIL ATIVIDADE X PERFIL ATIVIDADE ITEM";
}

<h4 class="">Associar Perfil Atividade X Perfil Atividade Item</h4>

<div class="row">

    @using (Html.BeginForm("Create", "PerfilAtivItemXPerfilItem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

        <div class="col-md-5">

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Ordem, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Ordem, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.idPerfilAtividade, new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.idPerfilAtividade, new SelectList((IEnumerable)ViewData["PerfilAtividade"], "idPerfilAtividade", "nome"), "Escolha uma Workzone",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true"
                        })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.idPerfilAtivItem, new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.idPerfilAtivItem, new SelectList((IEnumerable)ViewData["PerfilAtividadeItem"], "idPerfilAtivItem", "Sigla"), "Escolha uma Atividade",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true"
                        })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11">
                    <button type="submit" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Salvar</button>
                </div>
            </div>

        </div>

    }

</div>
<div class="row">
    <a type="button" class="btn btn-default" href="@Url.Action("Index", "PerfilAtivItemXPerfilItem")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
</div>
