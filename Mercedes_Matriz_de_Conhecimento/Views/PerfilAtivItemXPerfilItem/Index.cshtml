@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblPerfilAtividadeXPerfilAtItem>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Perfil Atividade Item X Perfil Item </h2>
    <div class="container table-place">

        <table class="table table-bordered">
            <thead class="text-center">
                <tr >
                    <th class="text-center">Ordem</th>
                    <th class="text-center">Perfil Atividade</th>
                    <th class="text-center">Sigla</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var activity in Model)
                {
                    <tr class="text-center">
                        <td>@activity.Ordem</td>
                        <td>@activity.tblPerfilAtividade.nome</td> 
                        <td>@activity.tblPerfilAtivItem.Sigla</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button onclick="location.href='@Url.Action("Details","PerfilAtivItemXPerfilItem",new { idPAI = @activity.idPerfilAtividade, idPA = @activity.idPerfilAtivItem })'"><i class="fas fa-pencil-alt icon-edit-modified"></i></button>
                                <button onclick="location.href='@Url.Action("Delete","PerfilAtivItemXPerfilItem",  new { idPAI = @activity.idPerfilAtividade, idPA = @activity.idPerfilAtivItem })"><i class="fas fa-trash icon-delete-modified"></i></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-modified-create btn-group-sm pull-right" href="@Url.Action("Create", "PerfilAtivItemXPerfilItem")">
            Associar Perfil Atividade X Perfil Atividade Item
        </a>
    </div>

</body>
</html>
