@model Mercedes_Matriz_de_Conhecimento.tblFuncionarios

@using System.Collections;

<script type="text/javascript">

    function closeModal() {
        $('#myModal').modal({
            show: 'false'
        });
    }
</script>

<h2>@ViewBag.Title.</h2>
<!-- Modal -->
<div class="modal fade"  tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar Funcionário</h4>
            </div>
            @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="modal-body">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nome, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.RE, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.RE, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.idBu_atual, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.idBu_atual, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.idBu_Origem, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.idBu_Origem, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.IdentificadorAuxiliar, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.IdentificadorAuxiliar, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Workzone", new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.DropDownList(m => m.idWorkzone, new SelectList((IEnumerable)ViewData["Workzone"], "IdWorkzone", "Nome"), "Escolha a Workzone", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="closeModal()">Fechar</button>
                    <button type="submit" class="btn btn-success">Criar</button>
                </div>
            }

        </div>
    </div>
</div>
