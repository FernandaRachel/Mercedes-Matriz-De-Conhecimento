@model Mercedes_Matriz_de_Conhecimento.tblWorkzone

@using System.Collections;

<script type="text/javascript">


</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>

    @*<h3 class=""></h3>*@

    <div class="row">

        @using (Html.BeginForm("Create", "Workzone", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

            <div class="col-md-5">
                <fieldset>
                    <legend>Cadastrar Workzone</legend>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Nome, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Descricao, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FlagAtivo, new { @class = "col-md-3 control-label" })
                        <div class="col-md-2">
                            @Html.CheckBoxFor(m => m.FlagAtivo, new { @class = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PessoasNecessarias, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.PessoasNecessarias, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-success btn-sm pull-right">Criar</button>
                        </div>
                    </div>
                </fieldset>

            </div>
        }
    </div>
    <div class="row">
        <a type="button" class="btn btn-default" href="@Url.Action("Index", "Workzone")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
    </div>
</body>
</html>