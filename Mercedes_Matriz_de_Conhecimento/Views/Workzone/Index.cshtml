@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblWorkzone>


<!DOCTYPE html>

<script type="text/javascript">
    var url = "Workzone/RedirectToCreate";


    function openModal() {
        $('#myModal').modal();
        $.ajax({
            url: url,
            success: function (result) {
                $('#searchResults').html(result);

            }
        });
    }
</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Workzone</h2>
    <div class="container table-place">

        <table class="table table-striped">
            <thead class="text-center">
                <tr class="table-dark">
                    <th class="text-center">Nome</th>
                    <th class="text-center">Descrição</th>
                    <th class="text-center">Pessoas Necessárias</th>
                    <th class="text-center">Ativo</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var workzone in Model)
                {
                    <tr class="text-center">
                        <td>@workzone.Nome</td>
                        <td>@workzone.Descricao</td>
                        <td>@workzone.PessoasNecessarias</td>
                        @if (@workzone.FlagAtivo == 1)
                        {
                            <td>Ativada</td>
                        }
                        else
                        {
                            <td>Desativada</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <!-- Button trigger modal -->
        <button id="newWorkzone" type="button" class="btn btn-primary btn-group-sm pull-right" data-toggle="modal" data-target="#myModal" onclick="openModal()">
            Cadastrar Workzone
        </button>
    </div>
    <div>

    </div>
    <div id="searchResults">

    </div>

</body>
</html>
