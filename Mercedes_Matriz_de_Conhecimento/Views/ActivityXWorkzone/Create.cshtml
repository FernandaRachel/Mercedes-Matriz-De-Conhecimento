@model Mercedes_Matriz_de_Conhecimento.tblWorkzoneXAtividades

@using System.Collections;

@{
    ViewBag.Title = "ASSOCIAR POSTO DE TRABALHO X ATIVIDADE";
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#training-list").css('display', 'none');
        });

        function selected() {
            var idWorkzone = document.getElementById("workzone");
            location.href = '@Url.Action("Details", "ActivityXWorkzone")?idWorkzone=' + idWorkzone.value + "&nome=";
        }

        function push(valueActivity) {
            var idWorkzone = document.getElementById("workzone");
            console.log(idActivity.value);
            console.log(valueWorkzone);
            location.href = '@Url.Action("Push", "ActivityXWorkzone")?idWorkzone=' + idWorkzone.value + '&idActivity=' + valueActivity;
        }

        function pop(valueActivity) {
            var idWorkzone = document.getElementById("workzone");
            console.log(valueWorkzone);
            location.href = '@Url.Action("Pop", "ActivityXWorkzone")?idWorkzone=' + idWorkzone.value + '&idActivity=' + valueActivity;
        }
    </script>
}

<h4 class="">Associar Posto de Trabalho X Atividade</h4>

<div class="row">

    @using (Html.BeginForm("Create", "ActivityXWorkzone", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

        <div class="col-md-5">

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Posto de Trabalho", new { @class = "col-md-3 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.idWorkzone, new SelectList((IEnumerable)ViewData["Workzones"], "idWorkzone", "Nome"), "Escolha um Posto de Trabalho",
                        new
                        {
                            @class = "form-control col-md-9 selectpicker",
                            data_show_subtext = "true",
                            data_live_search = "true",
                            id = "workzone"
                        })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11">
                    <button type="button" id="selecionado" onclick="selected()" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Selecionar Posto de Trabalho</button>
                </div>
            </div>

        </div>

    }

</div>
<div class="row">
    <a type="button" class="btn btn-default" href="@Url.Action("Index", "ActivityXWorkzone")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
</div>
