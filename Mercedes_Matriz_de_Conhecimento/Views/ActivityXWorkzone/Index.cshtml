@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblWorkzoneXAtividades>

@{
    ViewBag.Title = "ASSOCIAR ATIVIDADE X WORKZONE";
}


<div class="container button-place">
    <a type="button" class="btn btn-modified-create btn-group-sm pull-left" href="@Url.Action("Create", "ActivityXWorkzone")">
        Associar Atividade X Workzone
    </a>
</div>
<div class="container table-place">
    <div class="panel panel-primary">
        <div class="panel-heading">Quantidade: </div>
        <div class="panel-body table-responsive">
            <table class="table table-striped table-hover table-condensed table-bordered text-center">
                <thead class="text-center">
                    <tr>
                        <th class="text-center">Ordem</th>
                        <th class="text-center">Workzone</th>
                        <th class="text-center">Atividade</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var activity in Model)
                    {
                        <tr class="text-center">
                            <td>@activity.Ordem</td>
                            <td>@activity.tblWorkzone.Nome</td>
                            <td>@activity.tblAtividades.Nome</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn" onclick="location.href='@Url.Action("Details","ActivityXWorkzone",new { id = @activity.idWorkzoneAtividade })'"><i class="glyphicon glyphicon-pencil  icon-edit-modified"></i></button>
                                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete","ActivityXWorkzone", new { id=@activity.idWorkzoneAtividade })'"><i class="glyphicon glyphicon-trash icon-delete-modified"></i></button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
