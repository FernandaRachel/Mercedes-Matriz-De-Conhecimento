@model IEnumerable<Mercedes_Matriz_de_Conhecimento.tblPerfilTreinamento>


<!DOCTYPE html>

<script type="text/javascript">

</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2 class="text-center">Perfil de Treinamento</h2>
    <div class="container table-place">

        <table class="table table-bordered">
            <thead class="text-center">
                <tr >
                    <th class="text-center">Nome</th>
                    <th class="text-center">Usuário Criação</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var trainingProfile in Model)
                {
                    <tr class="text-center">
                        <td>@trainingProfile.Nome</td>
                        <td>@trainingProfile.UsuarioCriacao</td>
                        <td>
                            <div class="" role="group">
                                <button><a href="@Url.Action("Details","TrainingProfile",new { id = @trainingProfile.IdPerfilTreinamento })"><i class="fas fa-pencil-alt icon-edit-modified"></i></a></button>
                                <button><a href="@Url.Action("Delete","TrainingProfile",  new { id = @trainingProfile.IdPerfilTreinamento})"><i class="fas fa-trash icon-delete-modified"></i></a></button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <hr />
        <a type="button" class="btn btn-modified-create btn-group-sm pull-right" href="@Url.Action("Create", "TrainingProfile")">
            <i class="fas fa-plus"></i> Cadastrar Perfil de Treinamento
        </a>
    </div>

</body>
</html>
