@model Mercedes_Matriz_de_Conhecimento.tblPerfis

@using System.Collections;

@{
    ViewBag.Title = "PERFIL DE TREINAMENTO";
}

<h4 class="">Criar Perfil de Treinamento</h4>

<div class="row">

    @using (Html.BeginForm("Create", "TrainingProfile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

        <div class="col-md-5">

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Nome, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11">
                    <button type="submit" class="btn btn-modified-save pull-right"><i class="fas fa-save"></i> Salvar</button>
                </div>
            </div>

        </div>

    }

</div>
<div class="row">
    <a type="button" class="btn btn-default" href="@Url.Action("Index", "TrainingProfile")"><i class="glyphicon glyphicon-arrow-left"></i> Retornar para Visualização</a>
</div>